<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.grishma.unitconverter">

    <application
        android:name=".UnitConverter"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".conversionActivity.TemperatureActivity"
            android:label="@string/title_activity_temperature"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".conversionActivity.WeightActivity"
            android:label="@string/title_activity_weight"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".conversionActivity.LengthActivity"
            android:label="@string/title_activity_length"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".conversionActivity.TimeActivity"
            android:label="@string/title_activity_time"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
